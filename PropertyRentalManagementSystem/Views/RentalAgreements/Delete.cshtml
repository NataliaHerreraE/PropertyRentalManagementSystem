@model PropertyRentalManagementSystem.Models.RentalAgreement

@{
    ViewBag.Title = "Delete Rental Agreement";
}

<h2 class="dashboard-title">Delete Rental Agreement</h2>

<div class="apartment-details-card">
    <p>Are you sure you want to delete this rental agreement?</p>

    <!-- Display Agreement Details in a Read-only Format -->
    <div class="agreement-info">
        <h4>Agreement Information</h4>

        <!-- Tenant Name -->
        <p><strong>Tenant Name:</strong> @Model.User.FirstName @Model.User.LastName</p>

        <!-- Agreement Dates -->
        <p><strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd")</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToString("yyyy-MM-dd")</p>

        <!-- Building and Apartment -->
        <p><strong>Building:</strong> @Model.Apartment.Building.BuildingName</p>
        <p><strong>Apartment:</strong> Apartment @Model.Apartment.AppartmentNumber</p>

        <!-- Agreement ID and Status -->
        <p><strong>Agreement ID:</strong> @Model.AgreementId</p>
        <p><strong>Status:</strong> @Model.Status.StatusName</p>
    </div>

    <!-- Delete Confirmation Form -->
    @using (Html.BeginForm("Delete", "RentalAgreements", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.AgreementId)

        <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
        <a href="@Url.Action("Index", "RentalAgreements")" class="btn btn-secondary mt-3">Cancel</a>
    }
</div>

<!-- Back to Index Button -->
<div class="details-actions mt-4">
    <a href="@Url.Action("Index", "RentalAgreements")" class="btn btn-primary">Back to List</a>
</div>
