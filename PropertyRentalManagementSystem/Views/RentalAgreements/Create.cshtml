@model PropertyRentalManagementSystem.Models.RentalAgreement

@{
    ViewBag.Title = "Create Rental Agreement";
}

<h2 class="dashboard-title">Create Rental Agreement</h2>

@using (Html.BeginForm("Create", "RentalAgreements", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="apartment-details-card">
        <!-- Select Tenant -->
        <div class="form-group">
            <label for="TenantId">Tenant Name:</label>
            @Html.DropDownList("TenantId", ViewBag.TenantId as SelectList, "Select Tenant", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TenantId, "", new { @class = "text-danger" })
        </div>

        <!-- Select Building and Apartment -->
        <div class="form-group">
            <label for="ApartmentId">Apartment:</label>
            @Html.DropDownList("ApartmentId", ViewBag.ApartmentId as SelectList, "Select Apartment", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ApartmentId, "", new { @class = "text-danger" })
        </div>

        <!-- Agreement Dates -->
        <div class="form-group">
            <label for="StartDate">Start Date:</label>
            @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="EndDate">End Date:</label>
            @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>

        <!-- Create Agreement Button -->
        <button type="submit" class="btn btn-primary mt-3">Create Agreement</button>
    </div>
}

<div class="details-actions mt-4">
    <a href="@Url.Action("Index", "RentalAgreements")" class="btn btn-secondary">Back to List</a>
</div>
