@model PropertyRentalManagementSystem.Models.RentalAgreement

@{
    ViewBag.Title = "Rental Agreement Details";
}

<h2 class="dashboard-title">Rental Agreement Details</h2>

<div class="apartment-details-card">
    <!-- Display Agreement Status -->
    <div class="agreement-status">
        <h4>Status: @Model.Status.StatusName</h4>
    </div>

    <!-- Agreement Details Section with Dark Blue Styling -->
    <div class="apartment-info" style=" color: #ffffff; padding: 10px; border-radius: 8px; margin-top: 2px;">
       

        <!-- Tenant Name -->
        <div class="detail-row">
            <strong>Tenant Name:</strong> @Model.User.FirstName @Model.User.LastName
        </div>

        <!-- Agreement Dates -->
        <div class="detail-row">
            <strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd")
        </div>
        <div class="detail-row">
            <strong>End Date:</strong> @Model.EndDate.ToString("yyyy-MM-dd")
        </div>

        <!-- Building and Apartment -->
        <div class="detail-row">
            <strong>Building:</strong> @Model.Apartment.Building.BuildingName
        </div>
        <div class="detail-row">
            <strong>Apartment:</strong> Apartment @Model.Apartment.AppartmentNumber
        </div>

        <!-- Agreement ID -->
        <div class="detail-row">
            <strong>Agreement ID:</strong> @Model.AgreementId
        </div>

    </div>
</div>

<!-- Action Buttons -->
<div class="details-actions mt-4">
    <a href="@Url.Action("Edit", "RentalAgreements", new { id = Model.AgreementId })" class="btn btn-warning">Edit Agreement</a>
    <a href="@Url.Action("Index", "RentalAgreements")" class="btn btn-primary">Back to List</a>
</div>

<style>
    /* Styling for individual rows in the details section */
    .detail-row {
        margin-bottom: 10px;
    }
</style>
