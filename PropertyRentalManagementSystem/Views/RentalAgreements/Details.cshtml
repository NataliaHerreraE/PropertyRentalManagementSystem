@model PropertyRentalManagementSystem.Models.RentalAgreement

@{
    ViewBag.Title = "Rental Agreement Details";
    bool isActive = Model.EndDate >= DateTime.Today;
}

<h2 class="dashboard-title">Rental Agreement Details</h2>

<div class="apartment-details-card">
    <!-- Status Indicator -->
    <div class="apartment-info">
        <h3>Status: @(isActive ? "Active" : "Inactive")</h3>
    </div>

    <!-- Agreement Information -->
    <div class="apartment-info">
        <h4>Tenant Name:</h4>
        <p>@Model.User.FirstName @Model.User.LastName</p>

        <h4>Agreement Dates:</h4>
        <p><strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd")</p>
        <p><strong>End Date:</strong> @Model.EndDate.ToString("yyyy-MM-dd")</p>

        <h4>Location Details:</h4>
        <p><strong>Building:</strong> @Model.Apartment.Building.BuildingName</p>
        <p><strong>Apartment:</strong> Apartment @Model.Apartment.AppartmentNumber</p>

        <h4>Additional Information:</h4>
        <p><strong>Agreement ID:</strong> @Model.AgreementId</p>
    </div>

    <!-- Action Buttons -->
    <div class="details-actions">
        @Html.ActionLink("Edit Agreement", "Edit", new { id = Model.AgreementId }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>
