@model PropertyRentalManagementSystem.Models.Building

@{
    ViewBag.Title = "Create";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Create</h2>

