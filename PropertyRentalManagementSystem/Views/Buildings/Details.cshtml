@model PropertyRentalManagementSystem.Models.Building

<h2 class="dashboard-title">Building Details</h2>

<div class="building-details-card">
    <!-- Display Image (only if there is one) -->
    <div class="building-image-container">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="~/Content/@Model.ImagePath" alt="Building Image" class="building-image" />
        }
        else
        {
            <p>No image available</p>
        }
    </div>

    <!-- Display Building Details -->
    <div class="building-info">
        <h3>@Model.BuildingName</h3>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>City:</strong> @Model.City</p>
        <p><strong>Postal Code:</strong> @Model.PostalCode</p>
        <p><strong>Date Listed:</strong> @Model.DateListed.ToString("yyyy-MM-dd")</p>
    </div>

    <!-- Back and Edit Links -->
    <div class="details-actions">
        @Html.ActionLink("Edit", "Edit", new { id = Model.BuildingId }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>