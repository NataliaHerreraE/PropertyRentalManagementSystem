@model PropertyRentalManagementSystem.Models.Building

@{
    ViewBag.Title = "Delete Building";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Delete Building</h2>

<h3>Are you sure you want to delete this building?</h3>
<div class="building-details-card">
    <h4>Building Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <!-- Display Image (if available) -->
            <img src="~/Content/@Model.ImagePath" alt="Building Image" class="building-image" />
        </dt>
        <dd></dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuildingName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BuildingName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PostalCode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateListed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateListed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-warning" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
