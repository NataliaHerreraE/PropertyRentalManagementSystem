@model PropertyRentalManagementSystem.Models.Appointment

@{
    ViewBag.Title = "Delete Appointment";
}

<h2 class="dashboard-title">Delete Appointment</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="appointment-details-card">
    <h4>Are you sure you want to delete this appointment?</h4>
    <hr />
    <dl class="dl-horizontal">
        <!-- Appointment Date -->
        <dt>@Html.DisplayNameFor(model => model.Date)</dt>
        <dd>@Html.DisplayFor(model => model.Date)</dd>

        <!-- Apartment Number -->
        <dt>@Html.DisplayNameFor(model => model.Apartment.AppartmentNumber)</dt>
        <dd>@Html.DisplayFor(model => model.Apartment.AppartmentNumber)</dd>

        <!-- Status -->
        <dt>@Html.DisplayNameFor(model => model.Status.StatusName)</dt>
        <dd>@Html.DisplayFor(model => model.Status.StatusName)</dd>

        <!-- Tenant Full Name -->
        <dt>@Html.DisplayNameFor(model => model.User.FirstName) @Html.DisplayNameFor(model => model.User.LastName)</dt>
        <dd>@Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)</dd>

        <!-- Building Name (if applicable) -->
        <dt>@Html.DisplayNameFor(model => model.Apartment.Building.BuildingName)</dt>
        <dd>@Html.DisplayFor(model => model.Apartment.Building.BuildingName)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
        </div>
    }
</div>
