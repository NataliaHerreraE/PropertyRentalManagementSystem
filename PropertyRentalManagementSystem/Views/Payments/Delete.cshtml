@model PropertyRentalManagementSystem.Models.Payment

@{
    ViewBag.Title = "Delete Payment";
}

<h2 class="dashboard-title">Delete Payment</h2>

<div class="dark-blue-card">
    <h3>Are you sure you want to delete this payment?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>Amount</dt>
        <dd>@Model.Amount</dd>

        <dt>Date Paid</dt>
        <dd>@Model.DatePaid?.ToString("yyyy-MM-dd")</dd>

        <dt>Method of Payment</dt>
        <dd>@Model.MethodOfPayment</dd>

        <dt>Agreement ID</dt>
        <dd>@Model.RentalAgreement.AgreementId</dd>

        <dt>Building & Apartment</dt>
        <dd>@Model.RentalAgreement.Apartment.Building.BuildingName - Apt @Model.RentalAgreement.Apartment.AppartmentNumber</dd>

        <dt>Status</dt>
        <dd>@Model.Status.StatusName</dd>

        <dt>Tenant Name</dt>
        <dd>@Model.User.FirstName @Model.User.LastName</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
    }
</div>
