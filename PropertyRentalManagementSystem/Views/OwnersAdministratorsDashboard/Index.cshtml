<h2>Owners/Administrators Dashboard</h2>

<p>Select an option below to manage property managers or tenants.</p>

<!-- Display some aggregated statistics -->
<div class="dashboard-summary">
    <p>Total Tenants: @ViewBag.TenantCount</p>
    <p>Total Property Managers: @ViewBag.ManagerCount</p>
</div>

<div class="dashboard-options">
    <p>
        <!-- Redirects to the ManagerView page -->
        <a href="@Url.Action("Index", "Manager")" class="btn btn-primary">Manage Property Managers</a>
    </p>

    <p>
        <!-- Redirects to the TenantView page -->
        <a href="@Url.Action("Index", "Tenant")" class="btn btn-primary">Manage Potential Tenants</a>
    </p>
</div>
