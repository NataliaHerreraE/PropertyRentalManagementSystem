@model PropertyRentalManagementSystem.Models.Message

@{
    ViewBag.Title = "Message Details";
}

<h2>Message Details</h2>

<div class="card mt-4" style="background-color: white; border: 1px solid #ddd; padding: 20px;">
    <div class="card-header" style="background-color: #f8f9fa; padding: 10px;">
        <h4>@Model.TypeMessage.TypeName</h4> <!-- Display the type of message here -->
    </div>

    <div class="card-body" style="padding: 20px;">
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <th style="width: 20%;">From:</th>
                    <td>@Model.User.FirstName @Model.User.LastName</td>
                </tr>
                <tr>
                    <th>To:</th>
                    <td>@Model.User1.FirstName @Model.User1.LastName</td>
                </tr>
                <tr>
                    <th>Date Sent:</th>
                    <td>@Model.DateSent.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
                <tr>
                    <th>Building:</th>
                    <td>@Model.Apartment.Building.BuildingName</td> <!-- Add building name here -->
                </tr>
                <tr>
                    <th>Apartment:</th>
                    <td>@Model.Apartment.AppartmentNumber</td>
                </tr>
                <tr>
                    <th>Type:</th>
                    <td>@Model.TypeMessage.TypeName</td>
                </tr>
                <tr>
                    <th>Message:</th>
                    <td>@Model.Message1</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="card-footer">
    <a href="@Url.Action("Create", "Messages", new { toUserId = Model.FromUserId })" class="btn btn-primary">Reply</a>
    <a href="@Url.Action("Index", "Messages")" class="btn btn-primary">Back to List</a>
</div>
